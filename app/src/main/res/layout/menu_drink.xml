<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/card_margin"
                                    android:layout_marginRight="@dimen/card_margin"
                                    android:layout_marginTop="@dimen/card_margin_top"
                                    android:layout_marginBottom="@dimen/card_margin_bottom">

    <LinearLayout
            style="@style/Widget.DrinkContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/drinkBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:text="Paulaner"/>

        <TextView
                android:id="@+id/drinkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hefe-Weizenbier"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
                android:id="@+id/drinkDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:text="Rum mit Cola"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:gravity="right"
                      android:orientation="horizontal">



            <TextView
                    android:id="@+id/drinkPricePerVolume"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="1,50 € / 100ml"/>

            <TextView
                    android:id="@+id/drinkVolume"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="0,5l"/>

            <TextView
                    android:id="@+id/drinkPrice"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="3,50 €"/>

        </LinearLayout>

    </LinearLayout>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/moreActions"
                 android:src="@drawable/ic_more_vert_24dp"
                 android:tint="@android:color/darker_gray"
                 style="@style/Button.Small.Borderless"
                 android:layout_gravity="top|right"/>

    <ImageView
        android:tint="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="bottom|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_icon"
        android:src="@drawable/ic_new_24dp" />

</android.support.v7.widget.CardView>
